<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.fourwebcontent"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="10"
        android:targetSdkVersion="18"/>
    
    <uses-permission 
        android:name="android.permission.INTERNET"/>

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:screenOrientation="portrait"
            android:name="com.example.fourwebcontent.MainActivity"
            android:label="@string/app_name"
            android:configChanges="orientation|screenSize|keyboardHidden" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.example.fourwebcontent.WarWorlds"
            android:label="@string/title_activity_war_worlds"
            android:screenOrientation="portrait" >
        </activity>
        <activity
            android:name="com.example.fourwebcontent.Jabberwocky"
            android:label="@string/title_activity_jabberwocky"
            android:screenOrientation="portrait" >
        </activity>
        <activity
            android:name="com.example.fourwebcontent.UOFINASA"
            android:label="@string/title_activity_uofinas"
            android:screenOrientation="portrait" >
        </activity>
        <activity
            android:name="com.example.fourwebcontent.Roundball"
            android:label="@string/title_activity_roundball"
            android:screenOrientation="portrait" >
        </activity>
    </application>

</manifest>
